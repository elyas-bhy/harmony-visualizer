{% extends 'HarmonyVisualizerMainBundle:Default:index.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" type="text/css" media="screen" />
    <link rel="stylesheet" href="{{ asset('css/bootstrap-theme.min.css') }}" type="text/css" media="screen" />
    <link rel="stylesheet" href="{{ asset('css/design.css') }}" type="text/css" media="screen" />
    <link href="{{ asset('css/fonts.css') }}" rel="stylesheet" type="text/css">
    <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
    <script src="{{ asset('js/bootstrap.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}
<div class="endSurvey" style="height: auto;overflow-y: auto; border:none;">
	<div class="endTitle">
		<h1>
			Harmony<span>Visualizer</span><br>
			Survey
		</h1>
	</div>

	<style type="text/css">
		table {
			margin-bottom: 50px;
		}
		table td {
			border: 1px solid #fff;
			padding: 5px;
			text-align: center;
		}
	</style>

	<div class="context">
		<h2>Results</h2>

		<table>
			<tr>
				<td>Project</td>
				{% for q in questions %}
				<td>{{ q }}</td>
				{% endfor %}
			</tr>
			{% for project in data|keys %}
			<tr>
				<td>
					{{ project }}
				</td>
				
				{% for q in questions|keys %}
				<td>
					{{ data[project][q] }} / {{ total[project] }}
				</td>
				{% endfor %}
			</tr>
			{% endfor %}
		</table>

	</div>
</div>

{% endblock %}
