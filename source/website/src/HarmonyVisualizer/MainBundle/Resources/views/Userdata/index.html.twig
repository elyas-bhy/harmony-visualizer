{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Userdata list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Experience</th>
                <th>Job</th>
                <th>Visualizationexperience</th>
                <th>Deficiency</th>
                <th>Contributed</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('userdata_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.experience }}</td>
                <td>{{ entity.job }}</td>
                <td>{{ entity.visualizationExperience }}</td>
                <td>{{ entity.deficiency }}</td>
                <td>{{ entity.contributed }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('userdata_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('userdata_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('userdata_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
